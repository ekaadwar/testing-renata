<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style.css">
    <title>User</title>
</head>
<body>
    <%- include('../components/navbar') %>
    <a href="/users/create">Register</a>
    <h1>Daftar User (<%=users.length %>)</h1>
    <ul>
        <% if(users.length > 0) { %>
        <% users.forEach(function(user) { %>
            <li><a href="/users/<%=user.id%>">
            <%=user.name%></a>
            </li>
        <% }) %>
        <% } else { %>
        <p>data user kosong</p>
        <% } %>
    </ul>
    <footer>
        <p>Created by Febriany Renata</p>
    </footer>
</body>
</html>